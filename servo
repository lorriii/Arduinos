#include <Servo.h>

Servo myservo; 

int pos = 0;  
long int time_1 = millis();
bool mode = true;

void setup() {
  myservo.attach(9);
}

void loop() {
  if (millis() - time_1 == 60 && mode){
    myservo.write(++pos); 
    if (pos == 180) mode = false;
    time_1 = millis();
  }
  else if (millis() - time_1 == 60 && !mode){
    myservo.write(--pos); 
    if (pos == 0) mode = true;
    time_1 = millis();
  }
}
